{
  "name": "destiny-power-bars",
  "homepage": "https://destiny-power-bars.corke.dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "cross-env HTTPS=true react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "prettier": "prettier --check \"src/**/*.{ts,tsx}\"",
    "prettier:fix": "prettier --write \"src/**/*.{ts,tsx}\"",
    "tslint": "tslint \"src/**/*.{ts,tsx}\"",
    "tslint:fix": "tslint --fix \"src/**/*.{ts,tsx}\"",
    "storybook": "start-storybook"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@use-it/interval": "^0.1.3",
    "bungie-api-ts": "^2.3.0",
    "classnames": "^2.2.6",
    "humanize-duration": "^3.21.0",
    "idb-keyval": "^3.2.0",
    "lodash": "^4.17.15",
    "node-sass": "^4.13.0",
    "normalize.css": "^8.0.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-ga": "^2.7.0",
    "simple-query-string": "^1.3.2"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "@types/classnames": "^2.2.8",
    "@types/humanize-duration": "^3.18.0",
    "@types/jest": "24.0.13",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.17",
    "@types/node-sass": "^4.11.0",
    "@types/preval.macro": "^3.0.0",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "@types/simple-query-string": "^1.3.0",
    "awesome-typescript-loader": "^5.2.1",
    "cross-env": "^6.0.3",
    "gh-pages": "^2.1.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "preval.macro": "^3.0.0",
    "react-scripts": "^3.3.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.3"
  }
}
